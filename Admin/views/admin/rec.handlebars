<h3 class="text-center">Send Recruitment</h3>

<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <div class="card">
            <div class="card-content">
                <form role="form" action="recruitment"="contact-form" method="post">
                    <div class="form-group label-floating">
                        <label class="control-label">Email</label>
                        <input type="email" name="email" value="{{email}}" class="form-control" required>
                    </div>
                    <div class="form-group label-floating">
                        <label class="control-label">Email Body/Description</label>
                        <textarea name="description" value="{{description}}" class="form-control" id="" cols="30" rows="10"></textarea>
                    </div>
                    <div class="submit text-center">
                        <input type="submit" class="btn btn-primary btn-raised btn-round" value="Send Recruitment" />
                    </div>
                </form>
            </div>
        </div>

    </div>
</div>