<div class="row">
    <div class="col-md-5 col-md-offset-3">
        <h4><small>Clients List</small></h4>
        <div class="table-responsive" style="background-color:white;">
            <table class="table">
                <thead>

                    <tr>
                        <th class="text-center">#</th>
                        <th>Title</th>
                        <th>Review/Issue</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each rev}}
                    <tr>
                        <td class="text-center">1</td>
                        <td>{{title}}</td>
                        <td>{{issue}}</td>
                        <td class="td-actions text-right">
                            {{!-- <button type="button" rel="tooltip" class="btn btn-success">
                                <i class="material-icons">edit</i>
                            </button> --}}
                            <form action="reviews/{{id}}?_method=DELETE" method="POST">
                                <button type="submit" rel="tooltip" class="btn btn-danger">
                                    <i class="material-icons">close</i>
                                </button>
                            </form>

                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>

<hr>

<div class="row">
    <div class="col-md-6 col-md-offset-3 ">
        <div class="card">
            <div class="card-heading">
                <h3 class="text-center">Add Review</h3>
            </div>
            <br>
            <div class="card-content">
                <form action="reviews" method="post" class="form-group">
                    <div class="form-group ">
                        <label class="control-label">Subject</label>
                        <input type="text" name="title" value="{{title}}" placeholder="Subject" class="form-control"
                            required>
                    </div>
                    <div class="form-group ">
                        <label class="control-label">Review</label>
                        <textarea name="issue" value="{{issue}}" class="form-control" id="" cols="30" rows="05"></textarea>
                    </div>
                    <div class="submit text-center">
                        <input type="submit" class="btn btn-primary btn-raised btn-round" value="Add Review" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>